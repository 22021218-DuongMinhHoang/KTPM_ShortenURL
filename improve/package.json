{
  "name": "urlshortener-bun-elysia",
  "version": "2.0.0",
  "description": "High-performance URL shortener with CQRS architecture",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "redirect": "SERVICE_TYPE=redirect PORT=3001 bun run src/index.ts",
    "shorten": "SERVICE_TYPE=shorten PORT=3002 bun run src/index.ts"
  },
  "dependencies": {
    "cassandra-driver": "^4.7.2",
    "elysia": "^1.1.28",
    "mysql2": "^3.15.3",
    "nanoid": "^5.1.6",
    "rate-limiter-flexible": "^8.3.0",
    "redis": "^5.10.0"
  },
  "devDependencies": {
    "@types/bun": "latest"
  }
}
